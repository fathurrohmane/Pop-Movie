<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elkusnandi.popularmovie.features.main.movie_list.MovieListFragment">

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progressbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:theme="?android:attr/progressBarStyleLarge" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/layout_animation_slide_up_enter" />

    <com.elkusnandi.popularmovie.ui.widget.InformationView
        android:id="@+id/view_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
