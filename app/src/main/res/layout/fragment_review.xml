<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/va_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:inAnimation="@anim/fade_in">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_review"
        android:name="com.elkusnandi.popularmovie.features.detail.view.ReviewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.elkusnandi.popularmovie.features.detail.view.ReviewFragment"
        tools:listitem="@layout/item_review" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <include layout="@layout/state_error" />
</ViewAnimator>
